# Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Backend API URL (required for production)
# For local development, leave as localhost:8000
# For production, set to your deployed backend URL
BACKEND_URL=http://localhost:8000

# Next.js public environment variables (optional)
# These will be exposed to the browser
NEXT_PUBLIC_APP_NAME=OpenAI Chat Application
NEXT_PUBLIC_APP_VERSION=1.0.0
